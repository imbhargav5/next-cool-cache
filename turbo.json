{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "test": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "__tests__/**/*.ts", "jest.config.ts"],
      "outputs": ["coverage/**"]
    },
    "check-types": {
      "dependsOn": ["build", "^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
